<div class="container">
  <h1>Stupid Coaching</h1>
  <p><%= params[:question] %></p>
  <p><i>-You</i></p>
  <br>
  <% if params[:question] == "I am going to work" %>
    <% answer = "Great!" %>
  <% elsif params[:question][-1] == "?" %>
    <% answer = "Silly question, get dressed and go to work!" %>
  <% else %>
    <% answer = "I don't care, get dressed and go to work!" %>
  <% end %>
  <p><b><%= answer %></b></p>
  <p><i>-Your coach</i></p>

  <%= link_to "Get coached again!", "ask" %>
</div>
